{
  "name": "bmad-blockchain-dev",
  "version": "1.0.0",
  "description": "BMad Blockchain Development Expansion Pack for KEKTECH 3.0",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:size": "hardhat size-contracts",
    "test:sepolia": "hardhat test --network sepolia",
    "test:fork": "hardhat test test/fork/comprehensive-market-test.js --network forkedBasedAI",
    "test:foundry": "forge test",
    "test:foundry:fuzz": "forge test --fuzz-runs 10000",
    "test:foundry:invariant": "forge test --invariant",
    "test:foundry:coverage": "forge coverage",
    "clean": "hardhat clean && forge clean",
    "node": "hardhat node",
    "node:fork": "hardhat node --fork http://127.0.0.1:9933",
    "node:fork-direct": "hardhat node --fork https://mainnet.basedaibridge.com/rpc/",
    "deploy:local": "hardhat run scripts/deploy/deploy-v0.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy/deploy-sepolia.js --network sepolia",
    "deploy:sepolia:improved": "hardhat run scripts/deploy/deploy-sepolia-improved.js --network sepolia",
    "deploy:sepolia:split": "hardhat run scripts/deploy/deploy-split-sepolia.js --network sepolia",
    "deploy:fork": "hardhat run scripts/deploy/deploy-fork.js --network forkedBasedAI",
    "deploy:fork:split": "hardhat run scripts/deploy/deploy-split-fork.js --network localhost",
    "test:library-size": "hardhat run scripts/deploy/test-library-deployment-fork.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy/deploy-testnet.js --network basedai_testnet",
    "deploy:mainnet": "hardhat run scripts/deploy/deploy-basedai-mainnet.js --network basedai_mainnet",
    "verify:sepolia": "hardhat verify --network sepolia",
    "check:balance": "hardhat run scripts/check-balance.js --network basedai_mainnet",
    "configure:sepolia": "hardhat run scripts/complete-configuration.js --network sepolia",
    "demo:sepolia": "hardhat run scripts/end-to-end-demo.js --network sepolia",
    "deploy:fork-full": "hardhat run scripts/deploy/deploy-fork-from-sepolia.js --network forkedBasedAI",
    "test:fork-all": "node scripts/run-comprehensive-fork-tests.js",
    "verify:testnet": "hardhat verify --network basedai_testnet",
    "verify:mainnet": "hardhat verify --network basedai_mainnet",
    "security:slither": "slither . --config-file slither.config.json",
    "security:mythril": "myth analyze contracts/**/*.sol",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "agent:architect": "node agents/cli/blockchain-architect.js",
    "agent:dev": "node agents/cli/solidity-developer.js",
    "agent:security": "node agents/cli/security-auditor.js",
    "agent:gas": "node agents/cli/gas-optimizer.js",
    "agent:deploy": "node agents/cli/deployment-orchestrator.js",
    "deploy:sepolia:unified": "hardhat run scripts/deploy/deploy-unified-sepolia.js --network sepolia"
  },
  "keywords": [
    "blockchain",
    "solidity",
    "smart-contracts",
    "basedai",
    "kektech",
    "prediction-markets",
    "defi",
    "bmad"
  ],
  "author": "KEKTECH Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.10",
    "@types/mocha": "^10.0.4",
    "@types/node": "^20.9.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "hardhat": "^2.19.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "abdk-libraries-solidity": "^3.2.0",
    "merkletreejs": "^0.3.11"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kektech/bmad-blockchain-dev.git"
  },
  "bugs": {
    "url": "https://github.com/kektech/bmad-blockchain-dev/issues"
  },
  "homepage": "https://github.com/kektech/bmad-blockchain-dev#readme"
}
