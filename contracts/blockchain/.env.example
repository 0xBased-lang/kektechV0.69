# Environment Configuration for KEKTECH 3.0 Deployment
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK RPC ENDPOINTS
# =============================================================================

# Sepolia Testnet (for validation before mainnet)
SEPOLIA_RPC=https://rpc.sepolia.org

# BasedAI Mainnet (Chain ID: 32323) - production deployment
BASEDAI_RPC=https://rpc.basedai.network

# Local Development (Hardhat fork)
LOCALHOST_RPC=http://127.0.0.1:8545

# =============================================================================
# DEPLOYMENT KEYS
# =============================================================================

# Private key for deployment (hot wallet)
# ⚠️ CRITICAL: This will deploy contracts and transfer ownership
# ⚠️ NEVER commit this file with real keys!
# Format: 0x1234567890abcdef... (64 hex characters after 0x)
PRIVATE_KEY=

# Vultisig wallet address (for ownership transfer after validation)
# This is where ownership will be transferred after successful deployment
VULTISIG_WALLET_ADDRESS=

# =============================================================================
# ETHERSCAN API KEYS (for contract verification)
# =============================================================================

# Etherscan API key (for Sepolia verification)
ETHERSCAN_API_KEY=

# BasedAI explorer API key (if available)
BASEDAI_EXPLORER_API_KEY=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Gas price multiplier (1.2 = 20% above base)
GAS_PRICE_MULTIPLIER=1.2

# Transaction confirmation blocks
CONFIRMATIONS=2

# Deployment batch delay (ms between transactions)
DEPLOYMENT_DELAY=10000

# =============================================================================
# MARKET PARAMETERS (defaults - can be changed after deployment)
# =============================================================================

# Minimum creator bond (in ETH)
MIN_CREATOR_BOND=0.1

# Platform fee percentage (5 = 5%)
PLATFORM_FEE_PERCENT=5

# Dispute window (in seconds, 86400 = 24 hours)
DISPUTE_WINDOW=86400

# Resolution window (in seconds, 604800 = 7 days)
RESOLUTION_WINDOW=604800

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Discord webhook for deployment notifications (optional)
DISCORD_WEBHOOK_URL=

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=

# =============================================================================
# SECURITY
# =============================================================================

# Enable strict validation (recommended: true)
STRICT_VALIDATION=true

# Require manual confirmation for mainnet deployments (recommended: true)
REQUIRE_CONFIRMATION=true

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your private key and RPC endpoints
# 3. NEVER commit .env to git (it's in .gitignore)
# 4. For Sepolia: Get test ETH from https://sepoliafaucet.com/
# 5. For BasedAI: Use hot wallet first, transfer to Vultisig after validation
